pipeline {
    agent any

    triggers {
        pollSCM('*/5 * * * *')
    }

    stages {
        stage('Compile') {
            steps {
                gradlew('bootWar')
                deploy adapters: [tomcat8(path: '', url: 'http://localhost:8080')], contextPath: 'finance-manager', war: 'build/libs/finance-manager.war'
            }
        }

    }
}

def gradlew(String... args) {
    bat "gradlew ${args.join(' ')} -s"
}